<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Lilabali</title>
    <link href="~/Content/lilabali.css" rel="stylesheet" />
    
    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-sm-3">
                        <h5>Lialabali</h5>
                    </div>
                    <div class="col-sm-9" style="text-align:right;">
                        <a class="btn btn-sm btn-dark" href="@Url.Action("Home","Lilabali")">Members</a>
                        <a class="btn btn-sm btn-dark" href="@Url.Action("Teams","Lilabali")">Teams</a>
                        <a class="btn btn-sm btn-dark">Payments</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                @RenderBody()
            </div>
        </div>
    </div>
    <script>
             $(document).ready(function () {
            $("#myInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $(".filter").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

           
           
           
