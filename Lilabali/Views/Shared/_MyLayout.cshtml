<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Lilabali</title>
    <link href="~/Content/lilabali.css" rel="stylesheet" />
    
    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background: rgb(161,173,204); background: linear-gradient(90deg, rgba(161,173,204,1) 3%, rgba(19,212,70,1) 33%, rgba(213,164,213,1) 57%, rgba(120,175,242,1) 84%, rgba(223,157,157,1) 100%);">
    <div class="container">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-sm-3">
                        <h5>Lialabali</h5>
                    </div>
                    <div class="col-sm-9" style="text-align:right;">
                        <a class="btn btn-sm btn-dark">Members</a>
                        <a class="btn btn-sm btn-dark">Teams</a>
                        <a class="btn btn-sm btn-dark">Payments</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                @RenderBody()
            </div>
        </div>
    </div>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
