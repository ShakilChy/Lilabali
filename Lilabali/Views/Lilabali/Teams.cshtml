@model IEnumerable<Lilabali.Models.Team>

@{
    ViewBag.Title = "Teams";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<!-- Toast Notification -->
<div aria-live="polite" aria-atomic="true" style="position: relative; min-height: 200px;">
    <div id="toastContainer" style="position: absolute; top: 0; right: 0;"></div>
</div>

<div class="row">
    <div class="col-sm-3"><b>Teams</b></div>
    <div class="col-sm-3" style="text-align:left;"> <a class="btn btn-sm btn-info" data-toggle="modal" data-target="#TeamModal">Add Team</a></div>

    <div class="col-sm-6" style="text-align:right;">
        <input type="text" class="form-control-sm" id="myInput" placeholder="Search Team" />
    </div>
</div>
<hr />
<table class="table table-sm table-responsive-sm table-striped filter">
    <thead>
        <tr class="bg-dark text-light" style="text-align:center;">
            <td><strong>ID</strong></td>
            <td><strong>Team</strong></td>
            <td><strong>Status</strong></td>
        </tr>
    </thead>
    @if (Model != null)
    {
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="mytbl" style="text-align:center;">
                    <td>@item.TID</td>
                    <td>@item.TeamName</td>
                    <td>
                        @if (item.IsActive > 0)
                        {
                            <span>Active</span>
                        }
                        else
                        {<span>Inactive</span>}
                    </td>
                </tr>

            }
        </tbody>

    }
    else
    {
        <tbody>
            <tr>
                <td colspan="3" style="text-align:center">No Team Found</td>
            </tr>

        </tbody>

    }
</table>
@using (Html.BeginForm("AddTeam", "Lilabali", FormMethod.Post))

{


    <div class="modal fade" id="TeamModal" tabindex="-1" aria-labelledby="TeamModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-dark text-light">
                    <h5 class="modal-title" id="exampleModalLabel">Add New Team</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-4">
                            <label>Team Name</label>
                        </div>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" placeholder="Enter Team Name" name="Tname" required />
                        </div>
                    </div>



                    <input type="hidden" name="IsActive" value="1" />



                </div>
                <div class="modal-footer">
                    @*<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>*@
                    <button type="submit" class="btn btn-sm btn-outline-dark">Save</button>
                </div>
            </div>
        </div>
    </div>
}
@section scripts{
    <script>
        $(document).ready(function () {
            $("#myInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $(".mytbl").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
            // Toast Notification
var message = '@TempData["message"]';
var messageType = '@TempData["messageType"]';
if (message) {
    var toastHtml = `
        <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-delay="3000">
            <div class="toast-header bg-${messageType === "success" ? "success" : "danger"} text-white">
                <strong class="mr-auto">${messageType === "success" ? "Success" : "Error"}</strong>
                <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="toast-body">
                ${message}
            </div>
        </div>
    `;
    $('#toastContainer').html(toastHtml);
    $('.toast').toast('show');
}
        });
    </script>

}