@model IEnumerable<Lilabali.ViewModels.MembersView>
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}
<!-- Toast Notification -->
<section aria-live="polite" aria-atomic="true" style="position: relative; min-height: 200px;">
    <section id="toastContainer" style="position: absolute; top: 0; right: 0;"></section>
</section>



<div class="row">
    <div class="col-sm-3"><b>Members</b></div>
    <div class="col-sm-3" style="text-align:left;"> <a class="btn btn-sm btn-info" data-toggle="modal" data-target="#exampleModal">Add Member</a></div>

    <div class="col-sm-6" style="text-align:right;">
        <input type="text" class="form-control-sm" id="myInput" placeholder="Search Member" />
    </div>
</div>
<hr />
<table class="table table-sm table-striped filter">
    <thead>
        <tr class="bg-dark text-light" style="text-align:center;">

            <td><strong>Name</strong></td>
            <td><strong>Team</strong></td>
            <td><strong>Status</strong></td>

        </tr>
    </thead>
    @if (Model != null)
    {
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="mytbl" style="text-align:center;">

                    <td>@Html.DisplayFor(modelItem => item.M_Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.TeamName)</td>
                    <td>
                        @if (item.IsActive == 1)
                        {<span>Active</span> }
                        else
                        {<span>Inctive</span>}
                    </td>
                </tr>

            }
        </tbody>

    }
    else
    {
        <tbody>
            <tr>
                <td colspan="3" style="text-align:center">No Member Found</td>
            </tr>

        </tbody>

    }
</table>
@{
    var tms = ViewBag.Teams;
}
<!-- Button trigger modal -->
<!-- Modal -->
@using (Html.BeginForm("AddMember", "Lilabali", FormMethod.Post))

{
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-dark text-light">
                    <h5 class="modal-title" id="exampleModalLabel">Add New Member</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-4">
                            <label>Full Name</label>
                        </div>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" placeholder="Enter Name" name="M_Name" required />
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-4">
                            <label>Team</label>
                            <input type="hidden" name="IsActive" value="1" />
                        </div>
                        <div class="col-sm-8">

                            @if (tms != null)
                            {
                                @Html.DropDownList("TID", (IEnumerable<SelectListItem>)ViewBag.Teams, "--Select--", htmlAttributes: new { @class = "form-control", @required = "required" })
                            }
                            else
                            {
                                <select class="form-control" required>
                                    <option disabled>No Item To Select</option>
                                </select>
                            }
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    @*<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>*@
                    <button type="submit" class="btn btn-sm btn-outline-dark">Save</button>
                </div>
            </div>
        </div>
    </div>
}

@section scripts{
    <script>
        $(document).ready(function () {
            $("#myInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $(".mytbl").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

                // Toast Notification
    var message = '@TempData["message"]';
    var messageType = '@TempData["messageType"]';
    if (message) {
        var toastHtml = `
            <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-delay="3000">
                <div class="toast-header bg-${messageType === "success" ? "success" : "danger"} text-white">
                    <strong class="mr-auto">${messageType === "success" ? "Success" : "Error"}</strong>
                    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="toast-body">
                    ${message}
                </div>
            </div>
        `;
        $('#toastContainer').html(toastHtml);
        $('.toast').toast('show');
    }
        });
    </script>

}