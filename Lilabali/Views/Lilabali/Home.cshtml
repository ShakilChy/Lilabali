@model IEnumerable<Lilabali.Models.Member>
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}
<div class="row">
    <div class="col-sm-3"><b>Members</b></div>
    <div class="col-sm-3" style="text-align:left;"> <a class="btn btn-sm btn-info" data-toggle="modal" data-target="#exampleModal">Add Member</a></div>

    <div class="col-sm-6" style="text-align:right;">
        <input type="text" class="form-control-sm" placeholder="Search Member" />
    </div>
</div>
<hr />
<table class="table table-responsive-sm table-striped">
    <thead>
        <tr>
            <td>ID</td>
            <td>Name</td>
            <td>Team</td>
            <td>Status</td>
        </tr>
    </thead>
    @if (Model != null)
    {
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MID</td>
                    <td>@item.M_Name</td>
                    <td>@item.TID</td>
                    <td>@item.IsActive</td>
                </tr>

            }
        </tbody>

    }
    else
    {
        <tbody>
            <tr>
                <td colspan="4" style="text-align:center">No Member Found</td>
            </tr>

        </tbody>

    }
</table>
<!-- Button trigger modal -->
<!-- Modal -->
@using (Html.BeginForm("AddMember", "Lilabali", FormMethod.Post))

{


<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-dark text-light">
                    <h5 class="modal-title" id="exampleModalLabel">Add New Member</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-4">
                            <label>Full Name</label>
                        </div>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" placeholder="Enter Name" name="M_Name" required />
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-4">
                            <label>Team</label>
                            <input type="hidden" name="IsActive" value="1" />
                        </div>
                        <div class="col-sm-8">
                            @*<select class="form-control" name="TID" required>
            <option>--Select Team--</option>
            <option value="1">Capital Market Solutions</option>
            <option value="2">Banking Solutions</option>
            <option value="3">ERP</option>
            <option value="4">EMAS</option>
        </select>*@
                            @if (ViewBag.Teams != null)
                            {
                                Html.DropDownList("TID", (IEnumerable<SelectListItem>)ViewBag.Teams, "--Select--", htmlAttributes: new { @class = "form-control bnc", @required = "required" });
                            }
                else
                {
                            <select class="form-control" required>
                                <option disabled>No Item To Select</option>
                            </select>
                }
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    @*<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>*@
                    <button type="submit" class="btn btn-sm btn-outline-dark">Save</button>
                </div>
            </div>
        </div>
    </div>
}